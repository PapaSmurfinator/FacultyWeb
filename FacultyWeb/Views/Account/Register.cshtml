@model FacultyWeb.ViewModels.RegisterViewModel
    <div class="container text-center h-100" style="height:100%;">
        <div class="row h-100 justify-content-center align-items-center">
            <h2>Регистрация нового пользователя</h2>
            <form class="col-12" method="post" asp-controller="Account" asp-action="Register">
                <img class="mb-4" src="~/image/logodgu.jpg" alt="" width="72" height="72">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Email"></label><br />
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FIO"></label><br />
                    <input class="form-control" asp-for="FIO" />
                    <span asp-validation-for="FIO"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label><br />
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm"></label><br />
                    <input class="form-control" asp-for="PasswordConfirm" />
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-light btn-lg" type="submit" value="Регистрация" />
                </div>
            </form>
        </div>
    </div>
