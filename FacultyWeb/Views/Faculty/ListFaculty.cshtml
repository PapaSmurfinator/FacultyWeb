@model IEnumerable<FacultyWeb.Models.Faculty>

@{
    ViewData["Title"] = "ListFaculty";
}
<h1>ListFaculty</h1>

<p>
    <a class="text-decoration-none" asp-action="CreateFaculty">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="text-decoration-none" asp-action="FacultyComponents" asp-controller="Faculty" asp-route-Id="@item.Id">@item.Name</a>
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        <img style='width:112px; height:111px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                    }
                </td>
                <td>
                    <a class="text-decoration-none" asp-action="EditFaculty" asp-route-id="@item.Id">Edit</a> |
                    <a class="text-decoration-none" asp-action="DeleteFaculty" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
