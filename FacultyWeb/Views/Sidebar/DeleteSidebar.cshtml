@model FacultyWeb.Models.Sidebar

@{
    ViewData["Title"] = "DeleteSidebar";
}

<h1>DeleteSidebar</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sidebar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty.Id)
        </dd>
    </dl>

    <form asp-action="DeleteSidebar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="FacultyComponents" asp-controller="Faculty" asp-route-Id="@ViewBag.Id">Back to List</a>
    </form>
</div>
