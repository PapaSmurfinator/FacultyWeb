@model FacultyWeb.Models.Sidebar

@{
    ViewData["Title"] = "EditSidebar";
}

<h1>EditSidebar</h1>

<h4>Sidebar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSidebar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" value="@ViewBag.FacultyId" name="FacultyId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListFaculty" asp-controller="Faculty">Back to List</a>
</div>
